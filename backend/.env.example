# Environment
NODE_ENV=development
PORT=5000

# Database - Master (for tenant metadata)
MASTER_DB_URI=mongodb://localhost:27017/genzi_master

# Database - Tenants (base URI, database name will be appended)
TENANT_DB_BASE_URI=mongodb://localhost:27017

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Secrets
JWT_SECRET=dev-secret-jwt-key-change-this-in-production-please
JWT_REFRESH_SECRET=dev-refresh-secret-change-this-in-production-please
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Settings
COOKIE_SECRET=dev-cookie-secret-change-this

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AWS S3 (Optional - for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=genzi-uploads
AWS_REGION=us-east-1

# Email (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@genzirms.com
FROM_NAME=Genzi RMS

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application
APP_NAME=Genzi RMS
APP_URL=http://localhost:5000
APP_DOMAIN=localhost

# Stripe (for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Logging
LOG_LEVEL=debug
