{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"]
  },
  "include": [
    "src/server.ts",
    "src/app.ts",
    "src/config/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "src/__tests__/**/*",
    "src/**/*.test.ts",
    "src/scripts",
    "src/scripts/**/*",
    "src/seeds",
    "src/seeds/**/*"
  ]
}

