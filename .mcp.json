{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "type": "stdio"
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "chrome-devtools-mcp@latest"],
      "alwaysAllow": [
        "click",
        "close_page",
        "drag",
        "emulate",
        "evaluate_script",
        "fill",
        "fill_form",
        "get_console_message",
        "get_network_request",
        "handle_dialog",
        "hover",
        "list_console_messages",
        "list_network_requests",
        "list_pages",
        "navigate_page",
        "new_page",
        "performance_analyze_insight",
        "performance_start_trace",
        "performance_stop_trace",
        "press_key",
        "resize_page",
        "select_page",
        "take_screenshot",
        "take_snapshot",
        "upload_file",
        "wait_for"
      ],
      "disabled": false
    }
  }
}
